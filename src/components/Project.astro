---
import type { TagInfo } from '../utils/skills';
import Tag from './Tag.astro';

interface Props {
  projectName: string;
  projectUrl: string;
  imgSrc: string;
  body: string;
  techUsed: TagInfo[];
  techHeight?: string;
}

const { projectName, projectUrl, imgSrc, body, techUsed, techHeight } = Astro.props;
---
<style lang="scss">
  .project {
    padding: 25px;
    border-radius: 20px;
    height: 100%;
    margin: auto;
    background-color: hsl(210, 15%, 96%);
    box-shadow: 0 0 6px hsl(182, 10%, 73%);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .project-link:hover .project-image-container {
    background-color: hsl(182, 36%, 73%);
  }

  .project-link:hover .project-image {
    max-width: 85%;
    max-height: 85%;
  }

  .project-image-container {
    height: 200px;
    position: relative;
    background-color: hsl(182, 40%, 84%);
    border-radius: 10px;
    margin-bottom: 15px;
    transition: 0.5s;
  }

  .project-image {
    max-width: 70%;
    max-height: 70%;
    object-fit: contain;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    transition: 0.5s;
  }

  .project-tech {
    background-color: hsl(210, 15%, 94%);
    border-top: 1px solid hsl(182, 10%, 73%);
    margin: -25px;
    margin-top: 0;
    padding: 20px;
    align-items: center;
    justify-content: center;
    border-bottom-left-radius: 20px;
    border-bottom-right-radius: 20px;
  }

  .tech-used {
    list-style: none;
    flex-wrap: wrap;
    display: flex;
    gap: 10px;
  }
</style>

<div class="project">
  <div>
    <a class="project-link" href={projectUrl} target="_blank">
      <div class="project-image-container">
        <img class="project-image" src={imgSrc} alt={projectName} />
      </div>
      <h3>{projectName}</h3>
    </a>
    <p>{body}</p>
  </div>
  <div>
    <ul style={{ height: techHeight }} class="project-tech tech-used">
      {techUsed.map(tech => <Tag {...tech} />)}
    </ul>
  </div>
</div>
