---
import type { TagInfo } from '../utils/skills';
import Tag from './Tag.astro';

interface Props {
  projectName: string;
  projectUrl: string;
  imgSrc: string;
  body: string;
  techUsed: TagInfo[];
  techHeight?: string;
}

const { projectName, projectUrl, imgSrc, body, techUsed, techHeight } = Astro.props;
---
<style lang="scss">
  .project {
    padding: 35px;
    border-radius: 20px;
    height: 100%;
    margin: auto;
    background-color: hsl(210, 15%, 98%);
    border: 1px solid hsl(180, 7%, 80%);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .project-link:hover .project-image {
    height: 90%;
  }

  .project-image-container {
    height: 200px;
    position: relative;
    border-radius: 10px;
    margin-bottom: 15px;
    transition: 0.5s;
  }

  .project-image {
    height: 80%;
    object-fit: contain;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    transition: 0.5s;
  }

  .project-tech {
    background-color: hsl(210, 15%, 95%);
    border-top: 1px solid hsl(182, 10%, 73%);
    margin: -35px;
    margin-top: 0;
    padding: 20px 35px;
    align-items: center;
    justify-content: center;
    border-bottom-left-radius: 20px;
    border-bottom-right-radius: 20px;
  }

  .tech-used {
    list-style: none;
    flex-wrap: wrap;
    display: flex;
    gap: 10px;
  }
  
  :root.dark-mode .project {
    border: 1px solid hsl(180, 2%, 35%);
  }

  :root.dark-mode .project-image-container {
    // background-color: hsl(183, 24%, 31%);
    // background-color: hsl(188, 27%, 34%);
  }

  :root.dark-mode .project-link:hover .project-image-container {
    // background-color: hsl(190, 24%, 39%);
  }

  :root.dark-mode .project-tech {
    background-color: hsl(210, 1%, 27%);
    border-top: 1px solid hsl(180, 2%, 35%);
  }

  :root.dark-mode .project {
    background-color: hsl(240, 1%, 23%);
    // box-shadow: 0 0 6px hsl(180, 2%, 30%);
  }

  :root.dark-mode .project-name {
    color: #46b4b8;
  }

  :root.dark-mode .project-link:hover .project-name {
    color: #64bfc2;
  }
</style>

<div class="project">
  <div>
    <a class="project-link" href={projectUrl} target="_blank">
      <div class="project-image-container">
        <img class="project-image" src={imgSrc} alt={projectName} />
      </div>
      <h2 class="project-name">{projectName}</h2>
    </a>
    <p>{body}</p>
  </div>
  <div>
    <ul style={{ height: techHeight }} class="project-tech tech-used">
      {techUsed.map(tech => <Tag {...tech} />)}
    </ul>
  </div>
</div>
