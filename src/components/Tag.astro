---
interface Props {
  name: string;
  data: { type: "devicon", deviconId: string } | { type: "img", src: string };
}

const { name, data } = Astro.props;
---
<style lang="scss">
  .tag {
    display: flex;
    align-items: center;
    border-radius: 10px;
    border: none;
    padding: 6px 9px;
    font-size: 1em;
    background-color: #cce2eb;
    // background-color: #c6e7f0;
    // background-color: hsl(210, 15%, 95%);
    box-shadow: 0 0 3px hsl(182, 10%, 73%);

    img {
      max-width: 1.25rem;
      max-height: 1.25rem;
    }

    i {
      font-size: 1.25rem;
    }

    span {
      margin-left: 8px;
    }
  }

  :root.dark-mode .tag {
    background-color: #3b6b79;
    color: white;
    box-shadow: 0 0 3px hsl(180, 6%, 34%);
  }
</style>

<li class="tag">
  <!-- <img src={imgUrl} alt={name} /> -->
  {data.type === "devicon" ? <i class={`devicon-${data.deviconId}`} /> : <img src={data.src} alt={name} />}
  <span>
    {name}
  </span>
</li>
