---
import type { SectionName } from "../types"

interface Props {
  name: SectionName;
}

const name = Astro.props.name;
---
<style lang="scss">
  @use "../styles/shared";

  .section {
    margin: 100px 0;
    margin-bottom: 150px;
    // padding: 50px;
    text-align: left;

    :global(h2) {
      font-size: 35px;
      text-decoration: underline;
      text-decoration-thickness: 5px;
      text-underline-offset: 20px;
      text-decoration-color: shared.$themeColor1;
      margin-bottom: 70px;
      margin-top: 0;
    }

    :global(h3) {
      margin: 0;
      font-size: 30px;
    }
  }

  .scroll-target {
    height: 1px;
  }
</style>

<div id={`${name}-scroll-target`} class="scroll-target" />
<div class="section">
  <slot />
</div>
